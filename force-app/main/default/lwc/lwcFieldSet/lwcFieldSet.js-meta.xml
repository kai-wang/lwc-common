<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="lwcFieldSet">
    <apiVersion>45.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property label="Object API Name" name="sobjectName" type="String" default="Account"/>
            <property label="Field Set Name" name="fieldSetName" type="String"/>
            <property label="Record Type Id" name="recordTypeId" type="String"/>
            <property label="Columns" name="columns" type="String" default="2"/>
            <property label="Read Only Mode" name="readOnlyMode" type="Boolean"/>
            <property label="Keep Save Button" name="keepSaveButton" type="Boolean"/>
            <property label="Redirect To Target Record" name="redirectToTargetRecord" type="Boolean"/>
            <property label="Title" name="title" type="String"/>
            <property label="Icon Name" name="iconName" type="String"/>
            <property label="Record Id" name="pageRecordId" type="String"/>
            <property label="No Section Header" name="noSectionHeader" type="Boolean" default="true"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
